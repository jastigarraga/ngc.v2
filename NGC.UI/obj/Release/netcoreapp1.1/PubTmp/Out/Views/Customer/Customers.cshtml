@{
    Layout = "_Layout";
    ViewBag.Title = "Clientes";
}
<div layout="row" layout-align-sm="start stretch" flex ng-controller="MerakiCustomerController" flex-sm="100">
    <md-card flex layout-align-sm="start stretch">
        <md-card-title  md-colors="{'background-color':'primary'}" flex="none">
            <h2><i class="fa fa-address-book"></i> Clientes</h2>
        </md-card-title>
        <md-card-content style="overflow:auto">
            <div meraki-popup-grid="grid" ng-model="customers" layout="column" layout-align="stretch">

            </div>
        </md-card-content>
    </md-card>
</div>
@section Scripts{ 
    <script src="~/app/meraki-grid/meraki-popup-grid.js"></script>
}
